from tkinter import *
from tkinter import ttk

win=Tk()

win.title("Rajesh")

lab1=ttk.Label(win,text='Username :')
lab1.grid(row=0,column=0)

UnE=ttk.Entry(win,width=30)
UnE.grid(row=0,column=1,columnspan=2)


lab2=ttk.Label(win,text='Password :')
lab2.grid(row=1,column=0)

PwdE=ttk.Entry(win,width=30)
PwdE.grid(row=1,column=1,columnspan=2)
PwdE.config(show='#')

but=Button(win,text='Login',fg='white',bg='black')
but.grid(row=2,column=1)


